<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <!-- CardView chứa ViewPager2 (nhiều ảnh) -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewImages"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp">

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewPagerImages"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </androidx.cardview.widget.CardView>

        <!-- Giá sản phẩm -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp">

            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="20.000.000₫"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#D32F2F" />
        </androidx.cardview.widget.CardView>

        <!-- Cấu hình -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F5F5F5">

                <!-- Tiêu đề nổi bật -->
                <TextView
                    android:text="📱 Cấu hình chi tiết"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#FF5722"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:fontFamily="sans-serif-medium" />

                <!-- Khung chứa cấu hình -->
                <LinearLayout
                    android:id="@+id/layoutConfig"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="#FFFFFF"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="4dp"
                    android:backgroundTint="#EEEEEE"
                    android:elevation="3dp"
                    android:clipToPadding="false"
                    android:layout_marginHorizontal="4dp">

                    <!-- Chip -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="6dp">

                        <TextView
                            android:id="@+id/tvChipTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Chip:"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#000000" />

                        <TextView
                            android:id="@+id/tvChipContent"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Snapdragon 8 Gen 2"
                            android:textSize="16sp"
                            android:textColor="#333333"
                            android:layout_marginStart="8dp" />
                    </LinearLayout>

                    <!-- RAM -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="6dp">

                        <TextView
                            android:id="@+id/tvRamTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="RAM:"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#000000" />

                        <TextView
                            android:id="@+id/tvRamContent"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="12GB"
                            android:textSize="16sp"
                            android:textColor="#333333"
                            android:layout_marginStart="8dp" />
                    </LinearLayout>

                    <!-- Bộ nhớ trong -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="6dp">

                        <TextView
                            android:id="@+id/tvRomTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bộ nhớ trong:"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#000000" />

                        <TextView
                            android:id="@+id/tvRomContent"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="256GB"
                            android:textSize="16sp"
                            android:textColor="#333333"
                            android:layout_marginStart="8dp" />
                    </LinearLayout>

                    <!-- Pin -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="6dp">

                        <TextView
                            android:id="@+id/tvPinTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pin:"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#000000" />

                        <TextView
                            android:id="@+id/tvPinContent"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="5000mAh"
                            android:textSize="16sp"
                            android:textColor="#333333"
                            android:layout_marginStart="8dp" />
                    </LinearLayout>

                    <!-- Màn hình -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="6dp">

                        <TextView
                            android:id="@+id/tvScreenTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Màn hình:"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#000000" />

                        <TextView
                            android:id="@+id/tvScreenContent"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="6.7 inch AMOLED 120Hz"
                            android:textSize="16sp"
                            android:textColor="#333333"
                            android:layout_marginStart="8dp" />
                    </LinearLayout>

                    <!-- Camera -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="6dp">

                        <TextView
                            android:id="@+id/tvCameraTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Camera:"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#000000" />

                        <TextView
                            android:id="@+id/tvCameraContent"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="50MP + 12MP + 10MP, Selfie 32MP"
                            android:textSize="16sp"
                            android:textColor="#333333"
                            android:layout_marginStart="8dp" />
                    </LinearLayout>

                    <!-- Hệ điều hành -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="6dp">

                        <TextView
                            android:id="@+id/tvOSTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hệ điều hành:"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#000000" />

                        <TextView
                            android:id="@+id/tvOSContent"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Android 14"
                            android:textSize="16sp"
                            android:textColor="#333333"
                            android:layout_marginStart="8dp" />
                    </LinearLayout>

                    <!-- Sạc nhanh -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="6dp">

                        <TextView
                            android:id="@+id/tvBatteryChargeTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sạc nhanh:"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#000000" />

                        <TextView
                            android:id="@+id/tvBatteryChargeContent"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="67W, sạc không dây 30W"
                            android:textSize="16sp"
                            android:textColor="#333333"
                            android:layout_marginStart="8dp" />
                    </LinearLayout>

                    <!-- SIM -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="6dp">

                        <TextView
                            android:id="@+id/tvSimTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SIM:"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#000000" />

                        <TextView
                            android:id="@+id/tvSimContent"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="2 SIM Nano + eSIM"
                            android:textSize="16sp"
                            android:textColor="#333333"
                            android:layout_marginStart="8dp" />
                    </LinearLayout>

                    <!-- Mạng -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="6dp">

                        <TextView
                            android:id="@+id/tvNetworkTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mạng:"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#000000" />

                        <TextView
                            android:id="@+id/tvNetworkContent"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="5G, 4G LTE, 3G"
                            android:textSize="16sp"
                            android:textColor="#333333"
                            android:layout_marginStart="8dp" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Đánh giá -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Đánh giá"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"
                    android:textColor="#000000"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"/>

                <RatingBar
                    android:id="@+id/ratingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:stepSize="0.5"
                    android:rating="4.5"
                    android:isIndicator="true"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvComments"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rất hài lòng với sản phẩm. Pin dùng lâu, màn hình đẹp!"
                    android:lineSpacingExtra="4dp" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:padding="12dp"
            android:background="#FFFFFF"
            android:elevation="8dp"
            android:weightSum="2">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAddToCart"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="🛒 Thêm vào giỏ"
                android:textColor="#FFFFFF"
                app:cornerRadius="24dp"
                android:backgroundTint="#FF9800"
                android:layout_marginEnd="8dp"
                android:padding="12dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnBuyNow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="💳 Mua ngay"
                android:textColor="#FFFFFF"
                app:cornerRadius="24dp"
                android:backgroundTint="#4CAF50"
                android:padding="12dp"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
