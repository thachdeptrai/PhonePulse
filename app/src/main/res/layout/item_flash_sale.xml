<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_flash_sale"
    android:layout_width="120dp"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Flash Sale Image -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <ImageView
                android:id="@+id/iv_flash_sale_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/placeholder_product" />

            <!-- Discount Badge -->
            <TextView
                android:id="@+id/tv_flash_sale_discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|end"
                android:layout_margin="4dp"
                android:text="-50%"
                android:textSize="10sp"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:background="@drawable/flash_discount_badge"
                android:paddingStart="6dp"
                android:paddingEnd="6dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp" />

        </FrameLayout>

        <!-- Flash Sale Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <!-- Flash Sale Price -->
            <TextView
                android:id="@+id/tv_flash_sale_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="₫15.990.000"
                android:textSize="14sp"
                android:textColor="#FF6B00"
                android:textStyle="bold"
                android:gravity="center" />

            <!-- Progress Bar -->
            <ProgressBar
                android:id="@+id/progress_sold"
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:layout_marginTop="6dp"
                style="?android:attr/progressBarStyleHorizontal"
                android:progress="65"
                android:progressDrawable="@drawable/flash_sale_progress" />

            <!-- Sold Count -->
            <TextView
                android:id="@+id/tv_sold_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Đã bán 65"
                android:textSize="10sp"
                android:textColor="#666666"
                android:gravity="center"
                android:layout_marginTop="2dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>