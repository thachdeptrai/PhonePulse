<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true">

    <RelativeLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">
        <!-- Top Container with Logo -->
        <LinearLayout
            android:id="@+id/logoContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="32dp">

            <!-- Logo with shadow effect -->
            <FrameLayout
                android:layout_width="160dp"
                android:layout_height="120dp"
                android:layout_gravity="center">

                <!-- Main logo -->
                <ImageView
                    android:id="@+id/logoImageView"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:src="@drawable/icon"
                    android:scaleType="centerInside"
                    android:elevation="8dp"
                    android:contentDescription="PhonePulse Logo" />
            </FrameLayout>

            <!-- Main Title with gradient text effect -->
            <TextView
                android:id="@+id/rewards"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PhonePulse"
                style="@style/TitleText"
                android:textColor="#7716EF"
                android:layout_marginTop="3dp" />
            <!-- Registration Title -->
            <TextView
                android:id="@+id/registerTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Join the Future of Shopping"
                style="@style/SubtitleText"
                android:layout_marginTop="8dp" />

            <!-- Slogan -->
            <TextView
                android:id="@+id/slogan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Choice, Your Style, Your Shop"
                style="@style/SloganText"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Login Form Container -->
        <LinearLayout
            android:id="@+id/loginContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/logoContainer"
            android:layout_marginTop="32dp"
            android:orientation="vertical"
            android:background="@drawable/card_background"
            android:padding="28dp"
            android:elevation="12dp"
            android:clipToOutline="true"
            android:outlineProvider="background">


            <!-- Email Input -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                style="@style/CustomTextInputLayout"
                android:hint="Email Address">

                <EditText
                    android:id="@+id/edEmail"
                    style="@style/InputField"
                    android:drawableStart="@drawable/ic_person"
                    android:inputType="textEmailAddress" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Password Input -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                style="@style/CustomTextInputLayout"
                android:hint="Password"
                app:endIconMode="password_toggle">

                <EditText
                    android:id="@+id/edPassWord"
                    style="@style/InputField"
                    android:drawableStart="@drawable/ic_pass"
                    android:inputType="textPassword" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Sign In Button -->
            <Button
                android:id="@+id/btnLogin"
                style="@style/PrimaryButton"
                android:text="SIGN IN"
                android:background="@drawable/button_gradient"
                android:layout_marginBottom="24dp" />

            <!-- Divider -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginVertical="20dp">

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="@color/accent_pink" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OR"
                    android:textColor="@color/accent_pink"
                    android:textSize="12sp"
                    android:paddingHorizontal="16dp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="@color/accent_pink" />
            </LinearLayout>

            <!-- Social Login -->
            <LinearLayout
                android:id="@+id/socialLoginLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp">
                <!-- Google Button -->
                <ImageButton
                    android:id="@+id/btnGoogle"
                    style="@style/SocialButton"
                    android:src="@drawable/ic_gg"
                    android:layout_marginEnd="16dp"
                    android:contentDescription="Google Login" />
                <!-- Facebook Button -->
                <ImageButton
                    android:id="@+id/btnFacebook"
                    style="@style/SocialButton"
                    android:src="@drawable/ic_fb"
                    android:layout_marginStart="16dp"
                    android:contentDescription="Facebook Login" />
            </LinearLayout>

            <!-- Register Button -->
            <Button
                android:id="@+id/btnRegister"
                style="@style/SecondaryButton"
                android:text="Create a New Account" />
        </LinearLayout>

        <!-- Bottom spacing -->
        <View
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_below="@id/loginContainer" />
    </RelativeLayout>
</ScrollView>