<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FRAGMENT.HISTORY_ORDER_FRAGMENT.TatCaDonHang_FRAGMENT">

    <!-- Thống kê -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_summary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        android:backgroundTint="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Tổng số đơn -->
            <TextView
                android:id="@+id/tv_total_orders"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tổng số đơn: 0"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_gravity="center_horizontal" />

            <!-- Grid thống kê trạng thái -->
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:layout_marginTop="12dp">

                <!-- Đang xử lý -->
                <TextView
                    android:id="@+id/tv_processing_orders"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:text="Đang xử lý: 0"
                    android:textSize="14sp"
                    android:textColor="@color/shopee_orange"
                    />

                <!-- Đang giao -->
                <TextView
                    android:id="@+id/tv_shipping_orders"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:text="Đang giao: 0"
                    android:textSize="14sp"
                    android:textColor="@android:color/holo_blue_dark"
                    android:gravity="end"/>

                <!-- Hoàn thành -->
                <TextView
                    android:id="@+id/tv_completed_orders"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:text="Hoàn thành: 0"
                    android:textSize="14sp"
                    android:textColor="@android:color/holo_green_dark" />

                <!-- Đã hủy -->
                <TextView
                    android:id="@+id/tv_cancelled_orders"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:text="Đã hủy: 0"
                    android:textSize="14sp"
                    android:textColor="@android:color/holo_red_dark"
                    android:gravity="end"/>
            </GridLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Danh sách đơn -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_order_item"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/card_summary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/item_order" />

</androidx.constraintlayout.widget.ConstraintLayout>
