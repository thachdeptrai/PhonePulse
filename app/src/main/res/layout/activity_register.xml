<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1C1B3A"
    tools:context=".ui.auth.RegisterActivity">

    <!-- Logo -->
    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:src="@drawable/icon"
        android:contentDescription="PhonePulse Logo" />

    <!-- Logo Text -->
    <TextView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Join the Future of Shopping"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_below="@id/logoImageView"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true" />

    <!-- Slogan -->
    <TextView
        android:id="@+id/slogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Choice, Your Style, Your Shop"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_below="@id/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp" />

    <!-- Title -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PhonePulse"
        android:textColor="@android:color/white"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_below="@id/slogan"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp" />

    <!-- Full Name -->
    <EditText
        android:id="@+id/rgFullName"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="24dp"
        android:layout_below="@id/title"
        android:background="@drawable/bg_input_field"
        android:drawableLeft="@drawable/ic_person"
        android:drawablePadding="12dp"
        android:hint="Full Name"
        android:padding="12dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#BBBBBB"
        android:inputType="textPersonName" />

    <!-- Email -->
    <EditText
        android:id="@+id/rgEmail"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/rgFullName"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg_input_field"
        android:drawableLeft="@drawable/ic_email"
        android:drawablePadding="12dp"
        android:hint="Email"
        android:padding="12dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#BBBBBB"
        android:inputType="textEmailAddress" />

    <!-- Password -->
    <RelativeLayout
        android:id="@+id/passLayout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/rgEmail"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="12dp">

        <EditText
            android:id="@+id/rgPass"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_input_field"
            android:drawableLeft="@drawable/ic_pass"
            android:drawablePadding="12dp"
            android:hint="Password"
            android:padding="12dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#BBBBBB"
            android:inputType="textPassword" />

        <ImageView
            android:id="@+id/showHidePass"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/mat"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="12dp"
            android:clickable="true"
            android:focusable="true" />
    </RelativeLayout>

    <!-- Confirm Password -->
    <RelativeLayout
        android:id="@+id/conPassLayout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/passLayout"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="12dp">

        <EditText
            android:id="@+id/rgConPass"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_input_field"
            android:drawableLeft="@drawable/ic_pass"
            android:drawablePadding="12dp"
            android:hint="Confirm Password"
            android:padding="12dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#BBBBBB"
            android:inputType="textPassword" />

        <ImageView
            android:id="@+id/showHideConPass"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/mat"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="12dp"
            android:clickable="true"
            android:focusable="true" />
    </RelativeLayout>

    <!-- Register Button -->
    <Button
        android:id="@+id/btnRg"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/conPassLayout"
        android:text="SIGN UP"
        android:textAllCaps="true"
        android:textColor="#FFFFFF"
        android:background="#2D2C5D" />

    <!-- Already have an account -->
    <Button
        android:id="@+id/btnRgLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Already have an account? Sign In"
        android:textColor="#FFFFFF"
        android:background="@android:color/transparent"
        android:textSize="16sp"
        android:layout_below="@+id/btnRg"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp" />
</RelativeLayout>
