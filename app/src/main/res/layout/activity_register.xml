<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_background"
        android:padding="24dp">

        <!-- Top Container with Logo -->
        <LinearLayout
            android:id="@+id/logoContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Logo with shadow effect -->
            <FrameLayout
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_gravity="center">

                <!-- Shadow layer -->
                <View
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/logo_shadow"
                    android:alpha="0.3" />

                <!-- Main logo -->
                <ImageView
                    android:id="@+id/logoImageView"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:src="@drawable/icon"
                    android:scaleType="centerInside"
                    android:elevation="4dp"
                    android:contentDescription="PhonePulse Logo" />
            </FrameLayout>

            <!-- Main Title with gradient text effect -->
            <TextView
                android:id="@+id/appTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PhonePulse"
                style="@style/TitleText"
                android:layout_marginTop="12dp" />

            <!-- Registration Title -->
            <TextView
                android:id="@+id/registerTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Join the Future of Shopping"
                style="@style/SubtitleText"
                android:layout_marginTop="8dp" />

            <!-- Slogan -->
            <TextView
                android:id="@+id/slogan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Choice, Your Style, Your Shop"
                style="@style/SloganText"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Register Form Container -->
        <LinearLayout
            android:id="@+id/registerContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/logoContainer"
            android:layout_marginTop="24dp"
            android:orientation="vertical"
            android:background="@drawable/card_background"
            android:padding="28dp"
            android:elevation="8dp">

            <!-- Full Name Input -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                style="@style/CustomTextInputLayout"
                android:hint="Full Name">

                <EditText
                    android:id="@+id/edFullName"
                    style="@style/InputField"
                    android:drawableStart="@drawable/ic_person"
                    android:inputType="textPersonName" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Email Input -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                style="@style/CustomTextInputLayout"
                android:hint="Email Address">

                <EditText
                    android:id="@+id/edEmail"
                    style="@style/InputField"
                    android:drawableStart="@drawable/ic_email"
                    android:inputType="textEmailAddress" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Phone Number Input -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                style="@style/CustomTextInputLayout"
                android:hint="Phone Number (Optional)">

                <EditText
                    android:id="@+id/edPhone"
                    style="@style/InputField"
                    android:drawableStart="@drawable/ic_phone"
                    android:inputType="phone" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Password Input -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                style="@style/CustomTextInputLayout"
                android:hint="Password">

                <EditText
                    android:id="@+id/edPassword"
                    style="@style/InputField"
                    android:drawableStart="@drawable/ic_pass"
                    android:inputType="textPassword" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Confirm Password Input -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                style="@style/CustomTextInputLayout"
                android:hint="Confirm Password">

                <EditText
                    android:id="@+id/edConfirmPassword"
                    style="@style/InputField"
                    android:drawableStart="@drawable/ic_pass"
                    android:inputType="textPassword" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Terms and Conditions Checkbox -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="24dp">

                <CheckBox
                    android:id="@+id/cbTerms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="#6C63FF" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="I agree to the Terms &amp; Conditions and Privacy Policy"
                    android:textColor="#CCCCCC"
                    android:textSize="14sp"
                    android:layout_marginStart="8dp"
                    android:lineSpacingExtra="2dp" />
            </LinearLayout>

            <!-- Sign Up Button -->
            <Button
                android:id="@+id/btnRegister"
                style="@style/PrimaryButton"
                android:text="CREATE ACCOUNT"
                android:background="@drawable/button_gradient"
                android:layout_marginBottom="24dp" />

            <!-- Divider -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginVertical="20dp">

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="#444444" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OR SIGN UP WITH"
                    android:textColor="#888888"
                    android:textSize="12sp"
                    android:paddingHorizontal="16dp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="#444444" />
            </LinearLayout>

            <!-- Social Registration -->
            <LinearLayout
                android:id="@+id/socialRegisterLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp">

                <!-- Google Button -->
                <ImageButton
                    android:id="@+id/btnGoogleRegister"
                    style="@style/SocialButton"
                    android:src="@drawable/ic_gg"
                    android:layout_marginEnd="16dp"
                    android:contentDescription="Google Registration" />

                <!-- Facebook Button -->
                <ImageButton
                    android:id="@+id/btnFacebookRegister"
                    style="@style/SocialButton"
                    android:src="@drawable/ic_fb"
                    android:layout_marginStart="16dp"
                    android:contentDescription="Facebook Registration" />
            </LinearLayout>

            <!-- Login Button -->
            <Button
                android:id="@+id/btnLogin"
                style="@style/SecondaryButton"
                android:text="Already have an account? Sign In" />
        </LinearLayout>

        <!-- Bottom spacing -->
        <View
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_below="@id/registerContainer" />
    </RelativeLayout>
</ScrollView>