<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="1dp"
    android:backgroundTint="@android:color/white"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <!-- Product Image -->
        <ImageView
            android:id="@+id/iv_search_product_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/placeholder_product"
            android:scaleType="centerCrop"
            android:contentDescription="Product Image" />

        <!-- Product Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="8dp">

            <!-- Product Name -->
            <TextView
                android:id="@+id/tv_search_product_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="iPhone 15 Pro Max 256GB"
                android:textSize="14sp"
                android:textColor="#333333"
                android:maxLines="2"
                android:ellipsize="end" />

            <!-- Price -->
            <TextView
                android:id="@+id/tv_search_discount_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="₫25.990.000"
                android:textSize="16sp"
                android:textColor="#E74C3C" />

            <!-- Original Price -->
            <TextView
                android:id="@+id/tv_search_original_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="₫30.990.000"
                android:textSize="12sp"
                android:textColor="#999999"
                android:visibility="gone" />

            <!-- Discount Percent -->
            <TextView
                android:id="@+id/tv_search_discount_percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:background="#FF6B00"
                android:paddingStart="6dp"
                android:paddingEnd="6dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:text="-15%"
                android:textColor="@android:color/white"
                android:textSize="10sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <!-- Sold Count -->
            <TextView
                android:id="@+id/tv_search_sold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Đã bán 1,2k"
                android:textSize="10sp"
                android:textColor="#999999" />

        </LinearLayout>

        <!-- Add to Cart Button -->
        <Button
            android:id="@+id/btn_search_add_to_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:text="Thêm"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:backgroundTint="#FF6B00"
            android:textAllCaps="false" />

    </LinearLayout>

</androidx.cardview.widget.CardView>