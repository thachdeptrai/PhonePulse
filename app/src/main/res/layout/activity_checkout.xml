<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/nestedScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Tiêu đề -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thanh Toán"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="16dp" />

        <!-- RecyclerView hiển thị sản phẩm -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvCartItems"
            android:layout_width="match_parent"
            android:layout_height="245dp"
            android:layout_marginBottom="16dp"
            android:nestedScrollingEnabled="false" />

        <!-- Tổng tiền đơn hàng -->
        <TextView
            android:id="@+id/tvTotalAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tổng tiền: 0đ"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="end"
            android:paddingBottom="16dp"/>

        <!-- Chọn hình thức thanh toán -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chọn hình thức:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingTop="8dp" />

        <RadioGroup
            android:id="@+id/paymentMethods"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/rb_cash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thanh toán tiền mặt" />

            <RadioButton
                android:id="@+id/rb_qr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chuyển khoản QR" />

            <RadioButton
                android:id="@+id/rb_installment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trả góp (chọn số tháng)" />
        </RadioGroup>

        <!-- Số tháng trả góp -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:id="@+id/installmentLayout"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số tháng:"
                android:layout_gravity="center_vertical" />

            <Spinner
                android:id="@+id/spinnerMonths"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Địa chỉ nhận hàng -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nhập địa chỉ nhận hàng"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingTop="16dp" />

        <!-- Spinner chọn Tỉnh/Thành -->
        <Spinner
            android:id="@+id/spinnerProvince"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp" />

        <!-- Spinner chọn Quận/Huyện -->
        <Spinner
            android:id="@+id/spinnerDistrict"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp" />

        <!-- Spinner chọn Phường/Xã -->
        <Spinner
            android:id="@+id/spinnerWard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp" />

        <!-- Địa chỉ cụ thể -->
        <EditText
            android:id="@+id/etDetailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Số nhà, tên đường..."
            android:layout_marginTop="8dp" />

        <!-- Nút gửi đơn hàng -->
        <Button
            android:id="@+id/btnSubmitOrder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gửi đơn hàng"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/black"
            android:textColor="@android:color/white" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
